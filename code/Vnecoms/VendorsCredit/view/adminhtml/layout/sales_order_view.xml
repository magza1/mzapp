<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<referenceBlock name="order_items">
		    <arguments>
		        <argument name="columns" xsi:type="array">
		            <item name="commission" xsi:type="string" translate="true">Commission</item>
		        </argument>
		    </arguments>
		    <block class="Vnecoms\VendorsCredit\Block\Adminhtml\Sales\Order\Items\Column\Commission" name="column_commission" template="order/items/column/commission.phtml" group="column"/>
		</referenceBlock>
		
		<referenceBlock name="order_totals">
			<block class="Vnecoms\VendorsCredit\Block\Adminhtml\Sales\Order\Totals\Commission" name="vnecoms.vendors.commission" after="-" />
		</referenceBlock>
    </body>
</page>
