<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceContainer name="left">
            <block class="Vnecoms\VendorsProfileNotification\Block\Adminhtml\Process\Edit\Tabs" name="vendors_process_edit_tabs">
                <block class="Vnecoms\VendorsProfileNotification\Block\Adminhtml\Process\Edit\Tab\Main" name="vendors_process_edit_tab_main"/>
                
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">vendors_process_edit_tab_main</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Vnecoms\VendorsProfileNotification\Block\Adminhtml\Process\Edit" name="vendors_process_edit"/>
        </referenceContainer>
    </body>
</page>
