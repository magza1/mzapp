<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="payment_cart_collect_items_and_amounts">
    	<observer name="vnecoms_credit_collect_items_and_amounts" instance="Vnecoms\Credit\Observer\Payment\CollectItemsAndAmountsObserver" />
    </event>
    
    <event name="sales_order_invoice_save_after">
    	<!-- Add credit amount to customer credit account -->
        <observer name="vnecoms_credit_invoice_save_after" instance="Vnecoms\Credit\Observer\InvoiceSaveAfterObserver" />
    </event>
    
    <event name="sales_order_save_after">
    	<!-- Add credit amount to customer credit account -->
        <observer name="vnecoms_credit_checkout_submit_all_after" instance="Vnecoms\Credit\Observer\OrderSubmitAfterObserver" />
    </event>
    
    <event name="sales_model_service_quote_submit_before">
    	<!-- Set used credit amout from quote to order -->
    	<observer name="vnecoms_credit_quote_submit_before" instance="Vnecoms\Credit\Observer\QuoteSubmitBeforeObserver" />
    </event>
</config>
