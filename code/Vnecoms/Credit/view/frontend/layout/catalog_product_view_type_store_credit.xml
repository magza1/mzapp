<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
   		<css src="Vnecoms_Credit::css/credit.css"/>
<!--    		<css src="Vnecoms_Credit::ionslider/ion.rangeSlider.css"/>
   		<css src="Vnecoms_Credit::ionslider/ion.rangeSlider.skinNice.css"/> -->
   	</head>
    <body>
    	<attribute name="class" value="page-product-credit"/>
        <referenceContainer name="product.info.type">
            <block class="Vnecoms\Credit\Block\Product\View\Type\Credit" name="product.info.credit" as="product_type_data" template="Magento_Catalog::product/view/type/default.phtml"/>
            <container name="product.info.credit.extra" after="product.info.credit" as="product_type_data_extra" label="Product Extra Info"/>
        </referenceContainer>
        <referenceBlock name="product.info.options.wrapper">
            <block class="Vnecoms\Credit\Block\Product\View\Type\Credit" name="product.info.options.credit" as="options_credit" before="-" template="Vnecoms_Credit::product/view/type/options/credit.phtml"/>
        </referenceBlock>
    </body>
</page>
