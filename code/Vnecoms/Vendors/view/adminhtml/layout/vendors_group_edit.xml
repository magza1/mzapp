<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceContainer name="left">
            <block class="Vnecoms\Vendors\Block\Adminhtml\Group\Edit\Tabs" name="vendors_group_edit_tabs">
                <block class="Vnecoms\Vendors\Block\Adminhtml\Group\Edit\Tab\Main" name="vendors_group_edit_tab_main"/>
                <block class="Vnecoms\Vendors\Block\Adminhtml\Group\Edit\Tab\Vendor" name="vendors_group_edit_tab_vendors_list"  template="group/tab/vendor.phtml"/>
                
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">vendors_group_edit_tab_main</argument>
                </action>
				
				<action method="addTab">
                    <argument name="name" xsi:type="string">seller_section</argument>
                    <argument name="block" xsi:type="string">vendors_group_edit_tab_vendors_list</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Vnecoms\Vendors\Block\Adminhtml\Group\Edit" name="vendors_group_edit"/>
        </referenceContainer>
    </body>
</page>
