<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="vendors">
            <group id="vendorsmessage" translate="label tooltip" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
            	<label>Vendor Message</label>
				<field id="new_message_notification" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>New Message Notification</label>
                    <source_model>Vnecoms\Vendors\Model\Config\Source\Email\Template</source_model>
                    <tooltip>This email is sent to receiver to notify him about new message arrives.</tooltip>
                </field>
                <field id="sender_email_identity" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Email Sender</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Identity</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
