<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="vendor-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
        <css src="Vnecoms_VendorsDashboard::plugins/morris/morris.css" />
    </head>
    <body>
    	<referenceContainer name="content">
        	<block class="Vnecoms\VendorsDashboard\Block\Dashboard" name="vendor.dashboard" before="user" template="Vnecoms_VendorsDashboard::dashboard.phtml">
				<container name="dashboard.content" as="dashboard_content">
	        		<block class="Vnecoms\VendorsDashboard\Block\Vendors\Dashboard\Graph\Tabs" name="graph_tabs" as="graph_tabs" before="-">
	                    <block class="Vnecoms\VendorsDashboard\Block\Vendors\Dashboard\Graph\Tab\Orders" name="dashboard_graph_orders"/>
	                    <action method="addTab">
	                        <argument name="name" xsi:type="string">dashboard_graph_orders</argument>
	                        <argument name="block" xsi:type="string">dashboard_graph_orders</argument>
	                    </action>
	                    
	                    <block class="Vnecoms\VendorsDashboard\Block\Vendors\Dashboard\Graph\Tab\Amounts" name="dashboard_graph_amounts"/>
	                    <action method="addTab">
	                        <argument name="name" xsi:type="string">dashboard_graph_amounts</argument>
	                        <argument name="block" xsi:type="string">dashboard_graph_amounts</argument>
	                    </action>
	                    
	                    <block class="Vnecoms\VendorsDashboard\Block\Vendors\Dashboard\Graph\Tab\CreditTransactions" name="dashboard_graph_credit_trans"/>
	                    <action method="addTab">
	                        <argument name="name" xsi:type="string">dashboard_graph_credit_trans</argument>
	                        <argument name="block" xsi:type="string">dashboard_graph_credit_trans</argument>
	                	</action>
	        		</block>
	        	   
	        	   <block class="Vnecoms\VendorsDashboard\Block\Vendors\Dashboard\SellerState\Tabs" name="seller_state_tabs" as="seller_state_tabs">
	        	   </block>
        	   	</container>
        	   	<container name="dashboard.right" as="dashboard_right">
					<block class="Vnecoms\VendorsDashboard\Block\Vendors\Dashboard\Product\NewProducts" name="new_products" as="new_products" template="dashboard/product/new.phtml"/>
				</container>
        	</block>
        </referenceContainer>
    </body>
</page>
