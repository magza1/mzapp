<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="vendor-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_tabs">
        	<action method='setTemplate'>
		        <argument name='template' xsi:type='string'>Vnecoms_VendorsProduct::product/edit/tabshoriz.phtml</argument>
		    </action>
			<action method='setClass'>
		        <argument name='class' xsi:type='string'>product-horizontal-tabs</argument>
		    </action>
        </referenceBlock>
        <move element="product_tabs" destination="product-type-tabs"/>
    </body>
</page>
